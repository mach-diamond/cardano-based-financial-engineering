{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@mintmatrix/core": ["packages/core/src"],
      "@mintmatrix/sdk": ["sdk/mintmatrix-sdk/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
